{
    "name": "geekspeek/clever-php-sdk",
    "description": "Composer package for Clever APIs",
    "keywords": [
        "clever",
        "clever-api",
        "openapi",
        "php",
        "sdk",
        "rest",
        "api"
    ],
    "license": "unlicense",
    "authors": [
        {
            "name": "Joshua Lawrence",
            "homepage": "https://github.com/geekspeek"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "autoload": {
        "psr-4": { "Clever\\Client\\" : "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Clever\\Client\\Test\\" : "test/" }
    }
}
